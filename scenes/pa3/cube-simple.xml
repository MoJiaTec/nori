<scene>
	<!-- Independent sample generator, 32 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="1"/>
	</sampler>

	<!-- Use the simple point light integrator -->
    <integrator type="simple">
        <point name="position" value="100, 100, 100"/>
        <color name="energy" value="50.76e4, 50.76e4, 50.76e4"/>
    </integrator>

	<!-- Load the Ajax bust (a freely available scan from the Jotero forum) -->
	<mesh type="obj">
		<string name="filename" value="..\\cube.obj"/>

		<bsdf type="diffuse"/>
	</mesh>

	<!-- Render the scene viewed by a perspective camera -->
	<camera type="perspective">
        <!-- 3D origin, target point, and 'up' vector -->
		<transform name="toWorld">
            <lookat target="0, 0, 0"
                    origin="-500, 500, 500"
                    up="0, 1, 0"/>
		</transform>

		<!-- Field of view: 30 degrees -->
		<float name="fov" value="30"/>

		<!-- 768 x 768 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="768"/>
	</camera>
</scene>
